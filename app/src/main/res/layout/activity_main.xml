<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ashlikun.verifycodeview.simple.MainActivity">

    <com.ashlikun.verifycodeview.VerifyCodeView
        android:id="@+id/codeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:vcode_codeNumber="5"
        app:vcode_inputType="text"
        app:vcode_isSquare="true"
        app:vcode_textColor="@color/colorAccent"
        app:vcode_textSize="40dp"></com.ashlikun.verifycodeview.VerifyCodeView>

</LinearLayout>
